    "mappings": {
        "doc": {
            "properties": {
                "mediaId": {
                  "type": "keyword"
                },
                "title": {
                  "type": "text"
                },
                "type": {
                  "type": "text"
                },
                "author": {
                  "type": "text"
                },
                "description": {
                  "type": "text"
                },
                "releaseDate": {
                  "type": "date"
                },
                "imageUrl": {
                  "type": "text",
